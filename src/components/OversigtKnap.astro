---
const {text} = Astro.props;
import "../styles/general.css";

---
<button type="button">
    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 25 25" fill="none">
        <path d="M15.75 18.75L9.75 12.75L15.75 6.75" stroke="#E73127" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    <span class="label">
        {text}
    </span>
</button>
    

<style>
button{
display: flex;
flex-direction: row;
align-items: center;
padding: 0.5rem;
background: none;
color: none;
border: none;
cursor: pointer;
gap: 0.5rem;
}
.label{
font-size: var(--footer-secondary-font-size);
  letter-spacing: 0.081rem;
  text-transform: var(--text-transform-uppercase);
  font-weight: var(--font-weight-medium);
  color: var(--secondary-color);
}
</style>
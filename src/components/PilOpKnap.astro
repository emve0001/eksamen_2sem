---
const {variant, text} = Astro.props;
import "../styles/general.css";

---
<button type="button">
    <span class="label">
        {text}
    </span>
<slot />
</button>
<style>
    button{
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0.5rem;
    background: none;
    color: none;
    border: none;
    cursor: pointer;
    gap: 0.5rem;
    }
    .label{
    font-size: var(--footer-secondary-font-size);
      letter-spacing: 0.081rem;
      text-transform: var(--text-transform-uppercase);
      font-weight: var(--font-weight-medium);
      color: var(--secondary-color);
    }
    </style>